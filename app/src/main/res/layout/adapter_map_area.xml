<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/map_area_thumbnail_preview"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:contentDescription="@string/map_area_thumbnail_description"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/map_area_title_and_snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/map_area_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:tooltipText="This is the title" />

        <TextView
            android:id="@+id/map_area_snippet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textSize="14sp"
            android:tooltipText="This is the snippet" />

    </LinearLayout>


</LinearLayout>

